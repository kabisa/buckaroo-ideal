source "https://rubygems.org"

# Specify the project's dependencies in the gemspec:
gemspec

# Specifiy the development dependencies here:
group :development, :test do
  gem 'rake', '0.8.7'

  # Documentation:
  gem 'yard'

  # Testing libraries:
  gem 'rspec', '2.13.0'
  gem 'nokogiri', '1.5.10'
  gem "capybara", "0.3.9"
  gem "cucumber", "1.3.2" 
  gem "cucumber-rails", "0.3.2", :require => false
  gem 'factory_girl', "~> 2.6.4"
  gem 'vcr'
  gem 'webmock'
  gem 'savon_spec'

  # Colorful messages:
  gem 'rainbow'

  # Support for guard:
  gem 'guard'
  gem 'guard-bundler'
  gem 'guard-rspec'
  gem 'rb-fsevent'
  gem 'rb-readline'
  gem 'fuubar'
end